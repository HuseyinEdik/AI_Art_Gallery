@model List<AI_Art_Gallery.Models.ViewModels.DetailedArtViewModel>

@{
    ViewData["Title"] = "Detaylý Eser Listesi";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white">
            <i class="fa-solid fa-palette me-2"></i>Detaylý Eser Listesi
        </h2>
        <a asp-action="DatabaseViews" class="btn btn-outline-secondary rounded-pill">
            <i class="fa-solid fa-arrow-left me-2"></i>Geri Dön
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0" style="background-color: #1e1e1e;">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover" id="detailedArtsTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Eser Baþlýðý</th>
                                <th>Kategori</th>
                                <th>Sahip</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var art in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">#@art.Id</span></td>
                                    <td>
                                        <i class="fa-solid fa-image me-2 text-primary"></i>
                                        @art.Title
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@art.CategoryName</span>
                                    </td>
                                    <td>
                                        <i class="fa-solid fa-user me-2 text-success"></i>
                                        @art.OwnerName
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3 text-muted">
                    <i class="fa-solid fa-info-circle me-2"></i>
                    Toplam <strong>@Model.Count</strong> eser bulundu.
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fa-regular fa-folder-open fa-3x text-secondary opacity-50 mb-3"></i>
                    <p class="text-secondary">Henüz hiç eser bulunamadý.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // DataTable eklenebilir (opsiyonel)
        $(document).ready(function() {
            $('#detailedArtsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/tr.json"
                },
                "order": [[0, "desc"]]
            });
        });
    </script>
}
