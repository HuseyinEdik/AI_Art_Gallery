@model List<AI_Art_Gallery.Controllers.LogFileInfo>

@{
    ViewData["Title"] = "Log Yönetimi";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-white fw-bold mb-0">
                        <i class="fa-solid fa-file-lines me-2 text-primary"></i>Log Dosyalarý
                    </h2>
                    <p class="text-secondary mb-0">Toplam @ViewBag.TotalLogFiles dosya</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="fa-solid fa-arrow-left me-2"></i>Admin Paneli
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fa-solid fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card border-0 shadow-lg" style="background-color: #1e1e1e; border-radius: 15px;">
            <div class="card-body text-center py-5">
                <i class="fa-regular fa-folder-open fa-4x text-secondary opacity-25 mb-3"></i>
                <h5 class="text-white">Henüz log dosyasý bulunamadý</h5>
                <p class="text-secondary">Uygulama çalýþtýkça log dosyalarý burada listelenecek.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-lg" style="background-color: #1e1e1e; border-radius: 15px;">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead style="background-color: #2c2c2c;">
                            <tr>
                                <th class="border-0 py-3"><i class="fa-solid fa-file me-2"></i>Dosya Adý</th>
                                <th class="border-0 py-3"><i class="fa-solid fa-database me-2"></i>Boyut</th>
                                <th class="border-0 py-3"><i class="fa-solid fa-clock me-2"></i>Son Deðiþiklik</th>
                                <th class="border-0 py-3 text-center"><i class="fa-solid fa-cog me-2"></i>Ýþlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td class="align-middle">
                                        <i class="fa-solid fa-file-code me-2 text-info"></i>
                                        <span class="font-monospace">@log.FileName</span>
                                    </td>
                                    <td class="align-middle">
                                        @if (log.SizeMB < 1)
                                        {
                                            <span class="badge bg-success">@((log.Size / 1024.0).ToString("F2")) KB</span>
                                        }
                                        else if (log.SizeMB < 10)
                                        {
                                            <span class="badge bg-warning">@log.SizeMB.ToString("F2") MB</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@log.SizeMB.ToString("F2") MB</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <small class="text-secondary">@log.LastModified.ToString("dd.MM.yyyy HH:mm:ss")</small>
                                    </td>
                                    <td class="align-middle text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="ViewLog" asp-route-fileName="@log.FileName" 
                                               class="btn btn-sm btn-outline-info" title="Görüntüle">
                                                <i class="fa-solid fa-eye"></i>
                                            </a>
                                            <a asp-action="DownloadLog" asp-route-fileName="@log.FileName" 
                                               class="btn btn-sm btn-outline-success" title="Ýndir">
                                                <i class="fa-solid fa-download"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-warning" 
                                                    onclick="confirmClearLog('@log.FileName')" title="Temizle">
                                                <i class="fa-solid fa-eraser"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" 
                                                    onclick="confirmDeleteLog('@log.FileName')" title="Sil">
                                                <i class="fa-solid fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- Clear Log Form (Hidden) -->
<form id="clearLogForm" asp-action="ClearLog" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="fileName" id="clearLogFileName" />
</form>

<!-- Delete Log Form (Hidden) -->
<form id="deleteLogForm" asp-action="DeleteLog" method="post" style="display: none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="fileName" id="deleteLogFileName" />
</form>

<script>
    function confirmClearLog(fileName) {
        if (confirm(`"${fileName}" dosyasýný temizlemek istediðinize emin misiniz?\n\nÝçerik silinecek ama dosya kalacak.`)) {
            document.getElementById('clearLogFileName').value = fileName;
            document.getElementById('clearLogForm').submit();
        }
    }

    function confirmDeleteLog(fileName) {
        if (confirm(`"${fileName}" dosyasýný kalýcý olarak silmek istediðinize emin misiniz?\n\nBu iþlem geri alýnamaz!`)) {
            document.getElementById('deleteLogFileName').value = fileName;
            document.getElementById('deleteLogForm').submit();
        }
    }
</script>
