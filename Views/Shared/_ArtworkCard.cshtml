@model AI_Art_Gallery.Models.Artwork

<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
    <div class="card h-100 border-0 shadow-lg" style="background-color: #1e1e1e; border-radius: 15px; overflow: hidden; transition: transform 0.2s;">

        <div class="position-relative" style="cursor: pointer;" onclick="window.location.href='/Artwork/Details/@Model.Id'">
            <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 300px; object-fit: cover;">

            <div class="position-absolute top-0 end-0 m-2">
                <span class="badge bg-black bg-opacity-50 rounded-pill border border-secondary backdrop-blur">
                    <i class="fa-solid fa-robot me-1"></i> AI Art
                </span>
            </div>

            <div class="card-img-overlay d-flex align-items-center justify-content-center opacity-0 hover-overlay" style="background: rgba(0,0,0,0.5); transition: opacity 0.3s;">
                <span class="btn btn-light rounded-pill fw-bold">İncele</span>
            </div>
        </div>

        <div class="card-body">
            <h5 class="card-title text-white text-truncate">@Model.Title</h5>

            <p class="card-text text-secondary small text-truncate">
                <i class="fa-solid fa-terminal me-1 text-info"></i> @Model.PromptText
            </p>

            <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top border-secondary border-opacity-25">
                <small class="text-muted d-flex align-items-center">
                    <i class="fa-regular fa-circle-user me-2 fs-5"></i>
                    @(Model.AppUser?.Username ?? "Anonim")
                </small>

                <small class="text-danger fw-bold bg-danger bg-opacity-10 px-2 py-1 rounded-pill">
                    <i class="fa-solid fa-heart me-1"></i> @(Model.Likes?.Count ?? 0)
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
    }

        .card:hover .hover-overlay {
            opacity: 1 !important;
        }
</style>