@{
    Layout = "_Layout"; ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-4">

        <div class="card border-0 shadow-lg rounded-4" style="background-color: #1e1e1e;">
            <div class="card-body p-5">

                <div class="text-center mb-4">
                    <h2 class="text-white fw-bold">Hoş Geldin</h2>
                    <p class="text-secondary">Devam etmek için giriş yap.</p>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center py-2 mb-4">@ViewBag.Error</div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success text-center py-2 mb-4">
                        <i class="fa-solid fa-check-circle me-1"></i> @TempData["SuccessMessage"]
                    </div>
                }

                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label class="form-label text-secondary small fw-bold">E-POSTA</label>
                        <input type="email" name="email" class="form-control bg-dark text-white border-secondary py-2" placeholder="ornek@mail.com" required />
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <label class="form-label text-secondary small fw-bold mb-0">ŞİFRE</label>

                            <a asp-controller="Auth" asp-action="ForgotPassword" class="small text-decoration-none text-info">
                                Şifremi Unuttum?
                            </a>
                        </div>
                        <input type="password" name="password" class="form-control bg-dark text-white border-secondary py-2" placeholder="******" required />
                    </div>

                    <button class="btn btn-primary-custom w-100 py-2 rounded-pill fw-bold mb-4">
                        Giriş Yap
                    </button>
                </form>

                <div class="text-center">
                    <span class="text-secondary">Hesabın yok mu?</span>
                    <a asp-action="Register" class="text-info text-decoration-none ms-1">Kayıt Ol</a>
                </div>
            </div>
        </div>

    </div>
</div>