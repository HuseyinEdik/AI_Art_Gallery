@{
    Layout = "_Layout"; ViewData["Title"] = "Şifre Yenileme";
}

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-5 col-lg-4">

        <div class="card border-0 shadow-lg rounded-4" style="background-color: #1e1e1e;">
            <div class="card-body p-5">

                <div class="text-center mb-4">
                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                        <i class="fa-solid fa-lock fa-2x text-warning"></i>
                    </div>
                    <h3 class="text-white fw-bold">Yeni Şifre</h3>
                    <p class="text-secondary small">Lütfen hesabınız için güçlü bir şifre belirleyin.</p>
                </div>

                <form asp-action="ResetPassword">
                    <div class="mb-3">
                        <label class="text-secondary small fw-bold mb-2">YENİ ŞİFRE</label>
                        <input type="password" class="form-control bg-dark text-white border-secondary py-2" placeholder="******" />
                    </div>

                    <div class="mb-4">
                        <label class="text-secondary small fw-bold mb-2">ŞİFRE TEKRAR</label>
                        <input type="password" class="form-control bg-dark text-white border-secondary py-2" placeholder="******" />
                    </div>

                    <a asp-action="Login" class="btn btn-warning w-100 py-2 rounded-pill fw-bold text-dark mb-3">
                        Şifreyi Güncelle <i class="fa-solid fa-arrow-rotate-right ms-2"></i>
                    </a>
                </form>

            </div>
            <div class="progress" style="height: 4px;">
                <div class="progress-bar bg-warning" role="progressbar" style="width: 100%"></div>
            </div>
        </div>

    </div>
</div>