@{
    Layout = "_Layout"; ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-5 col-lg-4">

        <div class="card border-0 shadow-lg rounded-4" style="background-color: #1e1e1e;">
            <div class="card-body p-5">

                <div class="text-center mb-4">
                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 70px; height: 70px;">
                        <i class="fa-solid fa-key fa-2x text-primary"></i>
                    </div>
                    <h3 class="text-white fw-bold">Şifreni mi Unuttun?</h3>
                    <p class="text-secondary small">Endişelenme, e-posta adresini gir, sana bir kod gönderelim.</p>
                </div>

                <form asp-action="ForgotPassword">
                    <div class="mb-4">
                        <label class="text-secondary small fw-bold mb-2">E-POSTA ADRESİ</label>
                        <div class="input-group">
                            <span class="input-group-text bg-dark border-secondary text-secondary"><i class="fa-solid fa-envelope"></i></span>
                            <input type="email" class="form-control bg-dark text-white border-secondary py-2" placeholder="ornek@email.com" />
                        </div>
                    </div>

                    <a asp-action="VerifyCode" class="btn btn-primary-custom w-100 py-2 rounded-pill fw-bold mb-3">
                        Kod Gönder <i class="fa-solid fa-paper-plane ms-2"></i>
                    </a>
                </form>

                <div class="text-center">
                    <a asp-action="Login" class="text-decoration-none text-secondary small hover-white">
                        <i class="fa-solid fa-arrow-left me-1"></i> Giriş Ekranına Dön
                    </a>
                </div>

            </div>
            <div class="progress" style="height: 4px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 33%"></div>
            </div>
        </div>

    </div>
</div>