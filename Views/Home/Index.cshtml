@{
    ViewData["Title"] = "AI Gallery";
}

<div class="text-center py-5 mb-4" style="background: linear-gradient(180deg, rgba(30,30,30,0) 0%, rgba(187,134,252,0.05) 100%);">
    <h1 class="display-4 fw-bold text-white mb-3">🎨 AI Art Gallery</h1>
    <p class="lead text-secondary mx-auto" style="max-width: 600px;">
        Yapay zeka ile oluşturulmuş sanat eserlerini keşfedin!
    </p>

    <div class="mt-4">
        <a asp-controller="Artwork" asp-action="Index" class="btn btn-primary-custom btn-lg rounded-pill px-5 me-3">
            <i class="fa-solid fa-images me-2"></i>Galeriyi Keşfet
        </a>
        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light btn-lg rounded-pill px-5">
            <i class="fa-solid fa-right-to-bracket me-2"></i>Giriş Yap
        </a>
    </div>
</div>

<div class="container-fluid px-4 px-lg-5">
    <div class="row g-4 text-center mt-5">
        <div class="col-md-4">
            <div class="p-4">
                <i class="fa-solid fa-palette fa-3x text-primary mb-3"></i>
                <h5 class="text-white">Yaratıcılık</h5>
                <p class="text-secondary">AI ile benzersiz sanat eserleri oluşturun</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4">
                <i class="fa-solid fa-users fa-3x text-primary mb-3"></i>
                <h5 class="text-white">Topluluk</h5>
                <p class="text-secondary">Diğer sanatçılarla eserlerinizi paylaşın</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4">
                <i class="fa-solid fa-star fa-3x text-primary mb-3"></i>
                <h5 class="text-white">İlham</h5>
                <p class="text-secondary">Promptları keşfedin ve kullanın</p>
            </div>
        </div>
    </div>
</div>