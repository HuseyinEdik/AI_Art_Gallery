@model AI_Art_Gallery.Models.PromptResult

@{
    ViewData["Title"] = "ML Tahmin Sonucu";
}

<div class="container mt-4">
    <!-- Başlık -->
    <div class="text-center mb-5">
        <div class="d-inline-flex align-items-center justify-content-center p-3 rounded-circle mb-3 shadow-lg"
             style="background: linear-gradient(135deg, #00f260 0%, #0575E6 100%); width: 80px; height: 80px;">
            <i class="fa-solid fa-check-circle fa-2x text-white"></i>
        </div>
        <h2 class="fw-bold text-white mb-2">Analiz Tamamlandı</h2>
        <p class="text-secondary">ML modeliniz prompt'unuzu başarıyla analiz etti</p>
    </div>

    <div class="row g-4">
        <!-- Ana Sonuç Kartı -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg" style="background-color: #1e1e1e; border-radius: 15px;">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="text-white mb-0">
                        <i class="fa-solid fa-bullseye me-2 text-success"></i>Tahmin Sonucu
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="text-center py-4">
                        <div class="mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                                 style="width: 120px; height: 120px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="fa-solid fa-tag fa-3x text-white"></i>
                            </div>
                        </div>
                        
                        <h3 class="text-white fw-bold mb-2">@Model.Tahmin</h3>
                        <p class="text-secondary mb-4">Tahmin Edilen Kategori</p>

                        <div class="d-flex justify-content-center align-items-center gap-3 mb-4">
                            <div class="text-center">
                                <div class="progress mb-2" style="height: 8px; width: 200px;">
                                    <div class="progress-bar bg-success" 
                                         role="progressbar" 
                                         style="width: @Model.Guven_Orani;"
                                         aria-valuenow="@Model.Guven_Orani.TrimEnd('%')" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                    </div>
                                </div>
                                <div>
                                    <span class="badge bg-success bg-opacity-25 text-success border border-success px-3 py-2" style="font-size: 1.1rem;">
                                        <i class="fa-solid fa-percent me-1"></i>@Model.Guven_Orani Güven
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-success bg-success bg-opacity-10 border-success border-opacity-25" role="alert">
                        <div class="d-flex align-items-start">
                            <i class="fa-solid fa-circle-check fa-lg text-success me-3 mt-1"></i>
                            <div>
                                <h6 class="text-success fw-bold mb-1">Başarılı!</h6>
                                <p class="text-white small mb-0">
                                    Prompt'unuz <strong>@Model.Tahmin</strong> kategorisine 
                                    <strong>@Model.Guven_Orani</strong> güven oranıyla tahmin edildi.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detaylı İstatistikler -->
        <div class="col-lg-6">
            <div class="card border-0 shadow-lg" style="background-color: #1e1e1e; border-radius: 15px;">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="text-white mb-0">
                        <i class="fa-solid fa-chart-bar me-2 text-primary"></i>Detaylı Analiz
                    </h5>
                </div>
                <div class="card-body p-4">
                    @if (Model.Detaylar != null && Model.Detaylar.Any())
                    {
                        <p class="text-secondary small mb-3">Tüm kategori olasılıkları:</p>
                        
                        <div class="list-group list-group-flush">
                            @foreach (var item in Model.Detaylar.OrderByDescending(x => x.Value))
                            {
                                var percentage = (item.Value * 100).ToString("F2");
                                var isHighest = item.Key == Model.Tahmin;
                                var progressColor = isHighest ? "bg-success" : "bg-secondary";
                                var textColor = isHighest ? "text-success" : "text-white";
                                
                                <div class="list-group-item bg-transparent border-secondary border-opacity-25 mb-3">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="@textColor fw-bold">
                                            @if (isHighest)
                                            {
                                                <i class="fa-solid fa-crown me-2 text-warning"></i>
                                            }
                                            @item.Key
                                        </span>
                                        <span class="badge @(isHighest ? "bg-success" : "bg-secondary") bg-opacity-25 @textColor border @(isHighest ? "border-success" : "border-secondary") border-opacity-50">
                                            @percentage%
                                        </span>
                                    </div>
                                    <div class="progress" style="height: 8px;">
                                        <div class="progress-bar @progressColor" 
                                             role="progressbar" 
                                             style="width: @percentage%"
                                             aria-valuenow="@percentage" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fa-solid fa-circle-exclamation fa-3x text-warning opacity-25 mb-3"></i>
                            <p class="text-secondary">Detaylı analiz bilgisi mevcut değil.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Aksiyon Butonları -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-lg" style="background-color: #1e1e1e; border-radius: 15px;">
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-action="Index" class="btn btn-primary-custom w-100 py-3 rounded-pill fw-bold">
                                <i class="fa-solid fa-rotate-right me-2"></i>Yeni Analiz Yap
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Artwork" asp-action="Create" class="btn btn-outline-success w-100 py-3 rounded-pill fw-bold">
                                <i class="fa-solid fa-plus me-2"></i>Görsel Paylaş
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Artwork" asp-action="Index" class="btn btn-outline-secondary w-100 py-3 rounded-pill fw-bold">
                                <i class="fa-solid fa-arrow-left me-2"></i>Galeriye Dön
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bilgilendirme -->
    <div class="row mt-4 mb-5">
        <div class="col-12">
            <div class="alert alert-info bg-info bg-opacity-10 border-info border-opacity-25" role="alert">
                <div class="d-flex align-items-start">
                    <i class="fa-solid fa-info-circle fa-lg text-info me-3 mt-1"></i>
                    <div>
                        <h6 class="text-info fw-bold mb-2">Model Hakkında</h6>
                        <p class="text-white small mb-0">
                            Bu tahmin sonucu, makine öğrenmesi modelimiz tarafından oluşturulmuştur. 
                            Model, binlerce prompt üzerinde eğitilmiştir ve sürekli geliştirilmektedir.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-primary-custom {
        background: linear-gradient(90deg, #00f260, #0575E6);
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(5, 117, 230, 0.4);
        color: white;
    }

    .progress {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }

    .progress-bar {
        border-radius: 10px;
        transition: width 1s ease;
    }

    .list-group-item {
        transition: all 0.3s ease;
    }

    .list-group-item:hover {
        background-color: rgba(255, 255, 255, 0.05) !important;
        transform: translateX(5px);
    }
</style>

@section Scripts {
    <script>
        // Progress bar animasyonu
        document.addEventListener('DOMContentLoaded', function() {
            const progressBars = document.querySelectorAll('.progress-bar');
            progressBars.forEach((bar, index) => {
                const width = bar.style.width;
                bar.style.width = '0';
                
                setTimeout(() => {
                    bar.style.width = width;
                }, 100 + (index * 100));
            });
        });
    </script>
}


